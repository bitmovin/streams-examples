{
	"name": "streamcast",
	"version": "1.0.0",
	"author": "Hannes Linder",
	"description": "A chrome extension to record your screen and share it as a Bitmovin Stream",
	"type": "module",
	"license": "MIT",
	"keywords": [
		"bitmovin",
		"screen capture",
		"bitmvin streams",
		"screencast"
	],
	"engines": {
		"node": ">=14.18.0"
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"format": "prettier --write '**/*.{tsx,ts,json,css,scss,md}'"
	},
	"dependencies": {
		"@bitmovin/api-sdk": "^1.153.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@crxjs/vite-plugin": "^1.0.12",
		"@types/chrome": "^0.0.219",
		"@types/react": "^18.0.14",
		"@types/react-dom": "^18.0.5",
		"@vitejs/plugin-react": "^1.3.2",
		"prettier": "^2.7.1",
		"typescript": "^4.6.4",
		"vite": "^2.9.16"
	}
}
